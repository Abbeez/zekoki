{% style %}
    .custom-collection-list {
    padding-top: {{ settings.padding_top }}px;
    padding-bottom: {{ settings.padding_bottom }}px;
    margin-top: {{ settings.margin_top }}px;
    margin-bottom: {{ settings.margin_bottom }}px;
    margin-left:-8%;
    margin-right:-8%;
  }

  .collection-card {
    display: block;
    width: 100%;
    padding: 20px;
    margin-bottom: 20px;
    text-align: center;
    border-radius: 8px;
    transition: transform 0.2s ease-in-out;
  }

  .collection-card img {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }

  .collection-card h3 {
    margin-top: 10px;
    font-size: 18px;
    text-transform: uppercase;
  }

  .collection-card:nth-child(odd) {
    background-color: var(--zekoki-primary);
    color: var(--zekoki-white);
  }

  .collection-card:nth-child(even) {
    background-color: var(--zekoki-white);
    color: var(--zekoki-secondary);
  }

  .collection-card:hover {
    transform: scale(1.05);
  }

      .custom-collection-list .slick-slide{
    margin-left:  10px;
    margin-right:  10px;
  }

  .custom-collection-list .slick-list {
    margin-left: -10px;
    margin-right: -10px;
    /* pointer-events: none; */
  }
{% endstyle %}
<section
  class="custom-collection__section scroll-trigger animate--slide-in"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  "
>
  <div class="custom-collection-list">
    {% for block in section.blocks %}
      {% assign collection_handle = block.settings.boxed_collection %}
      {% if collection_handle != blank %}
        {% assign collection = collections[collection_handle] %}
        <div class="collection-card">
          <img src="{{ collection.image | image_url }}" alt="{{ collection.title }}" width="" height="">
          <h3>{{ block.settings.boxed_collection__heading | default: collection.title }}</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Collection List",
  "settings": [
  {
    "type": "header",
    "content": "Section Spacing"
  },
  {
    "type": "range",
    "id": "padding_top",
    "label": "Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "default": 20
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "label": "Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "default": 20
  },
  {
    "type": "range",
    "id": "margin_top",
    "label": "Margin Top",
    "min": -50,
    "max": 100,
    "step": 5,
    "default": 20
  },
  {
    "type": "range",
    "id": "margin_bottom",
    "label": "Margin Bottom",
    "min": -50,
    "max": 100,
    "step": 5,
    "default": 20
  }
  ],
    "blocks": [
    {
      "type": "Collections",
      "name": "Collection List",
      "limit": 12,
      "settings": [
        {
          "type": "collection",
          "id": "boxed_collection",
          "label": "Choose a collection"
        },
        {
          "type": "text",
          "id": "boxed_collection__heading",
          "label": "Heading",
          "default": "Collection Title"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection List"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener("DOMContentLoaded", function () {
       $('.custom-collection-list').slick({
           slidesToShow: 7,
           slidesToScroll: 3,
           autoplay: true,
           autoplaySpeed: 3000,
           dots: true,
           arrows: true,
           responsive: [
               {
                   breakpoint: 1024,
                   settings: {
                       slidesToShow: 3
                   }
               },
               {
                   breakpoint: 768,
                   settings: {
                       slidesToShow: 2
                   }
               },
               {
                   breakpoint: 480,
                   settings: {
                       slidesToShow: 1
                   }
               }
           ]
       });



     // Add to cart AJAX


   });
</script>
