{%- style -%}
    .Zekoki.Blurp.Section,
    .zekoki-blurp__container.blurp-second{
      display: flex;
      flex-direction: row;
      align-content: center;
      flex-wrap: wrap;
      gap:20px;
  }

    .Zekoki.Blurp.Section > div:first-child {
      width:35%;
      flex-grow: 1;
    }

    .Zekoki.Blurp.Section > div:last-child {
      width:55%;
      flex-grow: 1;
    }

  .zekoki-blurp__container.blurp-second > div.blurp-items{
    width: 45%;
    flex-grow: 1;
  }
{%- endstyle -%}

<h2>{{ section.settings.heading }}</h2>
<div class="page-width">
  <div class="Zekoki Blurp Section padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="zekoki-blurp__container blurp-first">
      <span>Quality</span>
      <h2 class="h1">Explore Our Diverse Product Categories</h2>
      <p>
        At Zekoki, we provide an extensive range of power tools, machinery, and accessories designed to meet your needs.
        Our commitment to quality and affordability ensures you get the best value for your investment.At Zekoki, we
        provide an extensive range of power tools, machinery, and accessories designed to meet your needs. Our
        commitment to quality and affordability ensures you get the best value for your investment.
      </p>
      <div class="banner__buttons banner__buttons--multiple">
        <a href="/collections/all" class="button button--primary">Shop Now</a
        ><a href="/pages/about-us" class="button button--secondary">Learn More</a>
      </div>
    </div>

    <div class="zekoki-blurp__container blurp-second">
      {% for block in section.blocks %}
        <div class="blurp-items">
          <span>{{ block.settings.icon }}</span>
          <h3 class=" title">{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Blurb Section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "blurb",
      "name": "Blurb",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label (Text Only)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blurb Section",
      "settings": {
        "padding_top": 40,
        "padding_bottom": 40
      },
      "blocks": [
        { "type": "blurb", "settings": { "label": "Step 1", "title": "Quality", "description": "We provide high-quality products." } },
        { "type": "blurb", "settings": { "label": "Step 2", "title": "Fast Delivery", "description": "Speedy shipping worldwide." } },
        { "type": "blurb", "settings": { "label": "Step 3", "title": "Best Price", "description": "Affordable yet premium." } },
        { "type": "blurb", "settings": { "label": "Step 4", "title": "Customer Love", "description": "We care about our customers." } }
      ]
    }
  ]
}
{% endschema %}
