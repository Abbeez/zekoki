{%- style -%}
    .Zekoki.Blurp.Section,
    .zekoki-blurp__container.blurp-second{
      display: flex;
      flex-direction: row;
      align-content: center;
      flex-wrap: wrap;
      gap:20px;
  }

    .Zekoki.Blurp.Section > div:first-child {
      width:35%;
      flex-grow: 1;
    }

    .Zekoki.Blurp.Section > div:last-child {
      width:55%;
      flex-grow: 1;
    }

  .zekoki-blurp__container.blurp-second > div.blurp-items{
    width: 45%;
    flex-grow: 1;
  }
{%- endstyle -%}

<h2>{{ section.settings.heading }}</h2>
<div class="page-width">
  <div id="" class="Zekoki Blurp Section">
    <div class="zekoki-blurp__container blurp-first">
      <span>{{ section.settings.category_subtitlesubtitle }}</span>
      <h2 class="h1">{{ section.settings.category_heading }}</h2>
      <p>{{ section.settings.category_description }}</p>

      <div class="banner__buttons banner__buttons--multiple">
        <a href="{{ section.settings.category_button_url_primary }}" class="button button--primary">
          {{- section.settings.category_button_text_primary -}}
        </a>
        <a href="{{ section.settings.category_button_url_secondary }}" class="button button--secondary">
          {{- section.settings.category_button_text_secondary -}}
        </a>
      </div>
    </div>

    <div class="zekoki-blurp__container blurp-second">
      {% for block in section.blocks %}
        <div class="blurp-items">
          <span>{{ block.settings.sub_category_subheading }}</span>
          <h3 class=" title">{{ block.settings.sub_category_title }}</h3>
          <p>{{ block.settings.sub_category_description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Zekoki Categories Section",
  "tag": "section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "category_subtitle",
      "label": "Subtitle",
      "default": "Your Subtitle Here"
    },
    {
      "type": "text",
      "id": "category_heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "category_description",
      "label": "Description",
      "default": "This is a customizable description. Change this text in the theme editor."
    },
    {
      "type": "text",
      "id": "category_button_text_primary",
      "label": "Button 1 Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "category_button_url_primary",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "category_button_text_secondary",
      "label": "Button 2 Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "category_button_url_secondary",
      "label": "Button 2 Link"
    }
  ],
    "blocks": [
    {
      "type": "blurps",
      "name": "blurps",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "sub_category_subheading",
          "label": "Sub Heading",
          "default": "Quality"
        },
        {
          "type": "text",
          "id": "sub_category_title",
          "label": "Heading",
          "default": "Explore"
        },
        {
          "type": "textarea",
          "id": "sub_category_description",
          "label": "Heading",
          "default": "Explore"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dynamic Text Section"
    }
  ]
}
{% endschema %}
