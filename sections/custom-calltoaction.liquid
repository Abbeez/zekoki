<style>
  .gradient-section {
    position: relative;
    width: 100%;
    height: 500px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    padding: 50px;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    opacity: 0.7; /* Adjust overlay opacity */
  }

  .content {
    position: relative;
    z-index: 3;
    max-width: 800px;
  }
</style>

<div
  class="gradient-section"
  style="background: url('{{ section.settings.gradient-background | image_url }}')"
>
  <div
    class="gradient-overlay"
    style="background: linear-gradient(180deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);"
  ></div>

  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <div class="subtext">{{ section.settings.subtext }}</div>
  </div>
</div>

{% schema %}
{
  "name": "Gradient Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "gradient-background",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Your subtext here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Gradient Background"
    }
  ]
}
{% endschema %}
