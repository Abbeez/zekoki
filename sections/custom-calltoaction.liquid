{% schema %}
{
  "name": "Gradient Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Your subtext here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Gradient Background"
    }
  ]
}
{% endschema %}

<div class="gradient-section">
  {% if section.settings.background_image != blank %}
    <div
      class="background-image"
      style="background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');"
    ></div>
  {% endif %}

  <div
    class="overlay"
    style="background: linear-gradient(180deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);"
  ></div>

  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <div class="subtext">{{ section.settings.subtext }}</div>
  </div>
</div>

<style>
  .gradient-section {
    position: relative;
    width: 100%;
    height: 500px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    padding: 50px;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    opacity: 0.7; /* Adjust overlay opacity */
  }

  .content {
    position: relative;
    z-index: 3;
    max-width: 800px;
  }
</style>
