<style>
       .gradient-section {
         position:relative;
         width: 100%;
         height: 400px;
         background-size: cover;
         color: white;
         padding: 20px;
         overflow:hidden;
       }

  .gradient-section-img {
            position: absolute;
         top: 0;
         left: 0;
         width: 100%;
  }

  .gradient-section-img:after{
      content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    mix-blend-mode: multiply;
    background: rgb(218,41,28);
    background: linear-gradient(141deg, rgba(218,41,28,1) 0%, rgba(14,14,14,1) 67%);
    opacity: 1;
  }

    .gradient-section-img > img {
        width: 100%;
      -webkit-filter:  brightness(133%) contrast(95%) grayscale(100%) hue-rotate(0deg) invert(0%) opacity(100%) saturate(300%) sepia(14%);
              filter:  brightness(133%) contrast(95%) grayscale(100%) hue-rotate(0deg) invert(0%) opacity(100%) saturate(300%) sepia(14%);
      mix-blend-mode: none;
  }
       .content {
         position: relative;
         z-index: 3;
         max-width: 800px;
       }
</style>

<div
  class="gradient-section"
>
  <div class="gradient-section-img">
    <img src="{{ section.settings.gradient-background | image_url }}');" height="" width="">
  </div>

  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <div class="subtext">{{ section.settings.subtext }}</div>
  </div>
</div>

{% schema %}
{
  "name": "Gradient Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "gradient-background",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Your subtext here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Gradient Background"
    }
  ]
}
{% endschema %}
