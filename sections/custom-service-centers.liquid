{%- style -%}
  .custom-servicecenters__table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }
  .custom-servicecenters__table th,
  .custom-servicecenters__table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }
  .custom-servicecenters__table th {
    background-color: var(--zekoki-primary);
    color: var(--zekoki-white);
  }
  .custom-servicecenters__pagination {
    margin-top: 20px;
    text-align: center;
  }
  .custom-servicecenters__pagination a,
  .custom-servicecenters__pagination span {
    display: inline-block;
    padding: 8px 12px;
    margin: 0 5px;
    border: 1px solid #ccc;
    text-decoration: none;
    border-radius: 5px;
  }
  .custom-servicecenters__pagination .current {
    background: var(--zekoki-primary);
    color: var(--zekoki-white);
  }
{%- endstyle -%}

<section
  class="page-width custom-servicecenters__section"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="custom-servicecenters__container">
    <div class="custom-servicecenters__header">
      <h2 class="h1 title">{{ section.settings['custom-servicecenters__title'] }}</h2>
      <p>{{ section.settings['custom-servicecenters__description'] }}</p>
    </div>

    {% assign centers_list = shop.metaobjects.service_centers.values %}
    {% assign centers_per_page = 5 %}
    {% assign page = request.query.page | default: 1 %}
    {% assign start_index = centers_per_page | times: page | minus: centers_per_page %}
    {% assign end_index = start_index | plus: centers_per_page %}

    <table class="custom-servicecenters__table">
      <thead>
        <tr>
          <th>Service Center</th>
          <th>Location</th>
          <th>Address</th>
          <th>Contact</th>
        </tr>
      </thead>
      <tbody>
        {% for i in (start_index..end_index) %}
          {% assign center = centers_list[i] %}
          {% if center %}
            <tr>
              <td>{{ center.service_center_name }}</td>
              <td>{{ center.location }}</td>
              <td>{{ center.address | metafield_tag }}</td>
              <td>
                {% if center.contact_number.size > 1 %}
                  <ul>
                    {% for number in center.contact_number %}
                      <li>{{ number }}</li>
                    {% endfor %}
                  </ul>
                {% else %}
                  <a
                    href="tel:{{ center.contact_number | metafield_text | remove:'-' }}"
                    class="button button--primary"
                  >
                    Inquire
                  </a>
                {% endif %}
              </td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
      <p>Total Service Centers: {{ shop.metaobjects.service_centers.values.size }}</p>
    </table>

    <!-- Pagination -->
    <div class="custom-servicecenters__pagination">
      {% assign total_pages = centers_list.size | divided_by: centers_per_page | ceil %}

      {% if page > 1 %}
        <a href="?page={{ page | minus: 1 }}">&laquo; Prev</a>
      {% endif %}

      {% for p in (1..total_pages) %}
        {% if p == page %}
          <span class="current">{{ p }}</span>
        {% else %}
          <a href="?page={{ p }}">{{ p }}</a>
        {% endif %}
      {% endfor %}

      {% if page < total_pages %}
        <a href="?page={{ page | plus: 1 }}">Next &raquo;</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Service Centers",
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "header",
      "content": "Service Centers Details"
    },
    {
      "type": "text",
      "id": "custom-servicecenters__title",
      "label": "Service Centers Title",
      "default": "Find a Service Center Near You"
    },
    {
      "type": "textarea",
      "id": "custom-servicecenters__description",
      "label": "Service Centers Description",
      "default": "Find authorized service centers for quality support."
    }
  ],
  "presets": [
    {
      "name": "Custom Service Centers Table"
    }
  ]
}
{% endschema %}
