{%- style -%}
  .custom-servicecenters__table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }
  .custom-servicecenters__table th,
  .custom-servicecenters__table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }
  .custom-servicecenters__table th {
    background-color: var(--zekoki-primary);
    color: var(--zekoki-white);
  }
  .custom-servicecenters__pagination {
    margin-top: 20px;
    text-align: center;
  }
  .custom-servicecenters__pagination a,
  .custom-servicecenters__pagination span {
    display: inline-block;
    padding: 8px 12px;
    margin: 0 5px;
    border: 1px solid #ccc;
    text-decoration: none;
    border-radius: 5px;
  }
  .custom-servicecenters__pagination .current {
    background: var(--zekoki-primary);
    color: var(--zekoki-white);
  }
{%- endstyle -%}

<section
  class="page-width custom-servicecenters__section"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="custom-servicecenters__container">
    <div class="custom-servicecenters__header">
      <h2 class="h1 title">{{ section.settings.custom_servicecenters__title }}</h2>
      <p>{{ section.settings.custom_servicecenters__description }}</p>
    </div>

    {% assign centers_list = shop.metaobjects.service_centers.values %}
    {% assign centers_per_page = 5 %}
    {% assign page = request.query.page | default: 1 | plus: 0 %}
    {% assign total_centers = centers_list.size %}
    {% assign total_pages = total_centers | divided_by: centers_per_page | ceil %}
    {% assign start_index = centers_per_page | times: page | minus: centers_per_page %}

    <!-- Debugging Output -->
    <p>Found {{ total_centers }} service centers.</p>

    {% if total_centers > 0 %}
      <table class="custom-servicecenters__table">
        <thead>
          <tr>
            <th>Service Center</th>
            <th>Location</th>
            <th>Address</th>
            <th>Contact</th>
          </tr>
        </thead>
        <tbody>
          {% for center in centers_list limit: centers_per_page offset: start_index %}
            <tr>
              <td>{{ center.metafields.custom.service_center_name }}</td>
              <td>{{ center.metafields.custom.location }}</td>
              <td>{{ center.metafields.custom.address }}</td>
              <td>
                {% if center.metafields.custom.contact_number.size > 1 %}
                  <ul>
                    {% for number in center.metafields.custom.contact_number %}
                      <li>{{ number }}</li>
                    {% endfor %}
                  </ul>
                {% else %}
                  <a
                    href="tel:{{ center.metafields.custom.contact_number | remove: '-' }}"
                    class="button button--primary"
                  >
                    Inquire
                  </a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="custom-servicecenters__pagination">
        {% if page > 1 %}
          <a href="?page={{ page | minus: 1 }}">&laquo; Prev</a>
        {% endif %}

        {% for p in (1..total_pages) %}
          {% if p == page %}
            <span class="current">{{ p }}</span>
          {% else %}
            <a href="?page={{ p }}">{{ p }}</a>
          {% endif %}
        {% endfor %}

        {% if page < total_pages %}
          <a href="?page={{ page | plus: 1 }}">Next &raquo;</a>
        {% endif %}
      </div>
    {% else %}
      <p>No service centers found.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Service Centers",
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "header",
      "content": "Service Centers Details"
    },
    {
      "type": "text",
      "id": "custom_servicecenters__title",
      "label": "Service Centers Title",
      "default": "Find a Service Center Near You"
    },
    {
      "type": "textarea",
      "id": "custom_servicecenters__description",
      "label": "Service Centers Description",
      "default": "Find authorized service centers for quality support."
    }
  ],
  "presets": [
    {
      "name": "Custom Service Centers Table"
    }
  ]
}
{% endschema %}
