{%- style -%}
  .custom-servicecenters__header {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .custom-servicecenters__table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .custom-servicecenters__table th,
  .custom-servicecenters__table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }

  .custom-servicecenters__table th {
    background-color: var(--zekoki-primary);
    color: var(--zekoki-white);
  }

  .custom-servicecenters__pagination {
    margin-top: 20px;
    text-align: center;
  }

  .custom-servicecenters__pagination a,
  .custom-servicecenters__pagination span {
    display: inline-block;
    padding: 8px 12px;
    margin: 0 5px;
    border: 1px solid #ccc;
    text-decoration: none;
    border-radius: 5px;
  }

  .custom-servicecenters__pagination .current {
    background: var(--zekoki-primary);
    color: var(--zekoki-white);
  }
{%- endstyle -%}

<section
  class="page-width custom-servicecenters__section scroll-trigger animate--slide-in"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="custom-servicecenters__container">
    <div class="custom-servicecenters__header">
      <div class="custom_servicecenters__header--container">
        <h2 class="h1 title">{{ section.settings['custom-servicecenters__title'] }}</h2>
      </div>
      <div class="custom_servicecenters__header--container">
        <p>{{ section.settings['custom-servicecenters__description'] }}</p>
      </div>
    </div>

    {% assign centers_list = shop.metaobjects.service_centers.values %}
    {{ shop.metaobjects.service_centers.size }}
    {% assign centers_per_page = 5 %}
    {% assign page = request.query.page | default: 1 | plus: 0 %}
    {% assign total_centers = centers_list.size %}
    {% assign total_pages = total_centers | divided_by: centers_per_page | ceil %}
    {% assign start_index = centers_per_page | times: page | minus: centers_per_page %}

    {% if total_centers > 0 %}
      <table class="custom-servicecenters__table">
        <thead>
          <tr>
            <th>Service Center</th>
            <th>Location</th>
            <th>Address</th>
            <th>Map</th>
          </tr>
        </thead>
        <tbody>
          {% for center in centers_list limit: centers_per_page offset: start_index %}
            <tr>
              <td>{{ center.service_center_name }}</td>
              <td>{{ center.location }}</td>
              <td>{{ center.address | metafield_tag }}</td>
              <td>
                <a href="http://www.example.com/" class="button button--primary"> Check Map </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="custom-servicecenters__pagination">
        {% if page > 1 %}
          <a href="?page={{ page | minus: 1 }}">&laquo; Prev</a>
        {% endif %}

        {% for p in (1..total_pages) %}
          {% if p == page %}
            <span class="current">{{ p }}</span>
          {% else %}
            <a href="?page={{ p }}">{{ p }}</a>
          {% endif %}
        {% endfor %}

        {% if page < total_pages %}
          <a href="?page={{ page | plus: 1 }}">Next &raquo;</a>
        {% endif %}
      </div>

    {% else %}
      <p>No service centers found.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Branches Section",
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "header",
      "content": "Service Centers Details"
    },
    {
      "type": "text",
      "id": "custom-servicecenters__title",
      "label": "Service Centers Title",
      "default": "Find a Service Center Near You"
    },
    {
      "type": "textarea",
      "id": "custom-servicecenters__description",
      "label": "Service Centers Description",
      "default": "Find authorized service centers for quality support."
    }
  ],
  "presets": [
    {
      "name": "Custom Store Branches Section"
    }
  ]
}
{% endschema %}
